<p>Restaurantes</p>
<table>
  <thead>
    <tr>
      <th>Nome</th>
    </tr>
  </thead>
  <tbody>
    <% Restaurant.all.each do |restaurant| %>
      <tr>
        <td><%= restaurant.name %></td>
        <table>
          <thead>
            <tr>
              <th>Produto</th>
              <th>Valor</th>
            </tr>
          </thead>
          <tbody>
            <% restaurant.products.each do |product| %>
              <tr>
                <%= form_tag('/orders') do %>
                  <%= hidden_field_tag :product_id, product.id %>
                  <td><%= product.name %></td>
                  <td><%= product.value %></td>
                  <td><%= submit_tag('Pedir') %></td>
                <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>
      </tr>
    <% end %>
  </tbody>
</table>